<h2>ドッグラン一覧</h2>

<%= search_form_for @q do |f| %>
    <h3><%= f.label :dogrun, "住所から検索" %>
    <%= f.search_field :address_cont %>
    <%= f.submit t('search') %>
    </h3>
<% end %>

<% if log_in? %>
<h4><%= link_to t('ドッグラン登録'), new_dogrun_path %></h4>
<% end %>


<div class="main">
<% @dogruns.each do |dogrun| %>
  <section class="card">
    <div class="card-img"><%= image_tag dogrun.image.url %></div>
      <div class="card-content">
      <h1 class="card-title"><%= dogrun.name %></h1>
      <p class="card-text"><%= dogrun.address %></p>
    </div> 
    <div class="card-link">
        <% if log_in? && dogrun.user.id == current_user.id %>
        <%= link_to t('Edit'), edit_dogrun_path(dogrun) %>
        <%= link_to 'Destroy', dogrun_path(dogrun), method: :delete, data: { confirm: '本当に削除していいですか?' }  %>
        <% end %>
    </div>  
  </section>
<% end %>
</div>  

<nav>
  <ul class="main-nav">
    <li><a href="#" class="logo">Logo</a></li>
    <li><a href="#">Menu 1</a></li>
    <li><a href="#">Menu 2</a></li>
    <li><a href="#">Menu 3</a></li>
    <li><a href="#">Menu 4</a></li>
  </ul>
</nav>

<div><%= paginate @dogruns %>
<%= page_entries_info @dogruns %>
