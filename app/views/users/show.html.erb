<div class="container">

<div>
<% if log_in? && @user.id == current_user.id %>
<h3>マイページ</h3>
<% else %>
<h3>プロフィール</h3>
<% end%>
</div>


<p><div><%= image_tag @user.image.url, size: '200x200' %></div></p>
<p><div>名前: <%= @user.name %></div></p>
<p><div>コメント: <%= @user.profile %></コメント:></div><p>

<% if log_in? && @user.id == current_user.id %>
<%= link_to 'プロフィールを編集する', edit_user_path(@user) %>
<% end%>

<% if log_in? && @user.id != current_user.id %>
<%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post %>
<%= render 'follow_form', user: @user %>
<% end%>

<div>
<%= link_to "フォロー", following_user_path(@user) %>
<%= link_to "フォロワー", followers_user_path(@user) %>
</div>

<h3>愛犬</h3>
<table>
  <thead>
    <tr>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mydogs.each do |mydog| %>
      <tr>
        <td><%= image_tag mydog.image.url, size: '200x200' %></td>
        <td><%= mydog.name %></td>
        <td><%= link_to 'Show', mydog %></td>
        <% if log_in? && mydog.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_mydog_path(mydog) %></td>
        <td><%= link_to 'Destroy', mydog_path(mydog.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if log_in? && @user.id == current_user.id %>
<h3>愛犬を登録する</h3>
<%= form_with model: @mydog, local: true  do |f| %>
<%= f.hidden_field :user_id, value: @user.id %>
  <% if @mydog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mydog.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @mydog.errors.full_messages.each do |mydog| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

    <div class="field">
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.radio_button :gender, :male %>男の子 <%= f.radio_button :gender, :female %>女の子 
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= image_tag(@mydog.image.url) if @mydog.image && @mydog.image.url %>
    <%= f.file_field :image %>
    <%#= input type="file",class="sell-upload-drop-file",multiple="multiple",name="image[]",style="display: none"%>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
<% end %>
 <div class="actions">
<% if log_in? && @user.id == current_user.id %>
<%= link_to "ドッグラン作成画面", new_dogrun_path, class:"btn btn-primary" %></div><p>
<% end %>
<%= link_to 'ドッグラン一覧に戻る', dogruns_path, class:"btn btn-primary" %>

</div>
</div>
</div>
</div>
</div>